@model LMS.Pages.Master.AddstdnumModel
@{
    ViewData["Title"] = "Addstdnum";
}

<form method="post" style="margin-top:30px;">

    <div asp-validation-summary="ModelOnly"> </div>
    <div class="form-group">
        <label style="font-size:30px;">مشخصات دانشجو را وارد کنید</label>
        <input asp-for="Students.Studentnum" class="form-control" placeholder="شماره دانشجویی ">
        <span class="text-danger" asp-validation-for="Students.Studentnum">  </span>
    </div>
    <div class="form-group">

        <input asp-for="Students.Name" class="form-control" placeholder="نام ">
        <span class="text-danger" asp-validation-for="Students.Name">  </span>
    </div>
    <div class="form-group">

        <input asp-for="Students.Lastname" class="form-control" placeholder="نام خانوادگی">
        <span class="text-danger" asp-validation-for="Students.Lastname">  </span>
    </div>
    <div class="form-group">

        <input  hidden asp-for="Students.Examlistid"  value="@Model.Id" >
        <span class="text-danger" asp-validation-for="Students.Lastname">  </span>
    </div>

    <button type="submit" class="btn btn-success">ثبت  </button>
    <a asp-page="/Index" class=" btn btn-danger">بازگشت به صفحه اصلی</a>




</form>
